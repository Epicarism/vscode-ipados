extension Color {
    init(nsColor: UIColor) {
        self.init(uiColor: nsColor)
    }
}

extension UIColor {
    static var controlBackgroundColor: UIColor {
        return .systemGray6 // Approximation
    }
    static var windowBackgroundColor: UIColor {
        return .systemBackground
    }
}
